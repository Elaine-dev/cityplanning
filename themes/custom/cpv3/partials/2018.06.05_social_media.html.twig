<div class="container-fluid padding-top60 padding-bottom60" ng-app="appSM" ng-controller="SocialMediaCtrl">
	<div class="row">
		{# Iterate record #}
		<span ng-repeat="d in data">
			{# display record according to the index value #}
			<span ng-switch on="$index">
 			<span ng-switch-when="0" >
 				<div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 pad-left-right wm">
 					{# Iterate inner record #}
		   			<span ng-repeat = "sm in d">
		    			<div class="box {[{ sm.type }]}-bg" style='{[{ sm.style }]}'>
		    				<div class="social-description">
		    					<a href="{[{ sm.url }]}" target="_blank">
		        					<span><i class="fa {[{ sm.iconClass }]} fa-3x" aria-hidden="true"></i></span>
		        					<div class="transparent-box ">
		        						<p ng-bind-html="sm.description|words:11"></p>
		        					</div>
		    					</a>
		    				</div>
		    			</div>
		   			</span>
		   		</div>
 			</span>
 			<span ng-switch-when="2">
 				<div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 pad-left-right wm">
 					{# Iterate inner record #}
		   			<span ng-repeat = "sm in d">
		    			<div class="box {[{ sm.type }]}-bg" style='{[{ sm.style }]}'>
		    				<div class="social-description">
		    					<a href="{[{ sm.url }]}" target="_blank">
		        					<span><i class="fa {[{ sm.iconClass }]} fa-3x" aria-hidden="true"></i></span>
		        					<div class="transparent-box ">
		        						<p ng-bind-html="sm.description|words:11"></p>
		        					</div>
		    					</a>
		    				</div>
		    			</div>
		   			</span>
		   		</div>
 			</span>
 			<span ng-switch-default>
 				<div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 pad-left-right wm">
  					{# Iterate inner record #}
		   			<span ng-repeat = "sm in d">
		    			<div class="box {[{ sm.type }]}-bg" style='{[{ sm.style }]}'>
		    				<div class="social-description">
		    					<a href="{[{ sm.url }]}" target="_blank">
		        					<span><i class="fa {[{ sm.iconClass }]} fa-3x" aria-hidden="true"></i></span>
		        					<div class="transparent-box ">
		        						<p ng-bind-html="sm.description|words:11"></p>
		        					</div>
		    					</a>
		    				</div>
		    			</div>
		   			</span>
		   		</div>
 			</span>
 		</span>
		</span>
	</div>
</div>