    <!-- Fixed navbar -->
    {% include directory ~ '/partials/header.html.twig' %}
    <style>
        .popover { position: absolute; z-index: 100; }
    </style>
    
    <div ng-app="appHearing" ng-controller="hearingsCtrl">
    	<!-- title-bar -->
    	<div id="title-bar">
        	<div class="container">
        		<div class="row">
        			<div class="col-md-8 col-xs-12">
        				<h1>Hearings - {[{ planningAreaTitle }]}</h1>
        			</div>
        			
        			<!-- breadcrumb -->
        			<div class="col-md-4 col-xs-12">
                    	<ol class="breadcrumb pull-right">
                          <li><a href="#">Home</a></li>
                          <li><a href="#">About</a></li>
                        </ol>
                    </div>
        		</div>
        		
        		<div class="bottom" style="padding-top:20px;"></div>
        		
        	</div>
    	</div><!-- //End title-bar -->
        	
    	<div class="clear"></div>
        	
    	<!-- contain -->
    	<div class="container section-padding-inner">
    		<div class="row">
    			<!-- left bar -->
    			<div class="col-md-12 col-xs-12">
    				<div ng-disabled="enable=='false'">
    					<center ng-show="loadingText == 'Loading ...'"><i class="fa fa-spinner fa-spin fa-2x fa-fw"></i><span class="sr-only">Loading...</span></center>
    				</div>
    				
    				<!-- hearings -->
    				<div class="padding-bottom20">
    					<div class="row">
        					<div class="col-md-10 col-xs-12">
        						<label>Filter by : </label>
            					<select name="apc" ng-model="apc" >
            						 <option ng-repeat="option in apcAreas.availableOptions" value="{[{option.id}]}"  ng-selected="apc == option.id">{[{option.name}]}</option>
            					</select> 
            					
            					<select name="date" ng-model="date">
                                	<option ng-repeat="d in dates" ng-selected="d==date" ng-value="d" ng-bind="d"></option>
                              	</select> 
        					</div>
    					
    						<div class="col-md-2 col-xs-12 pull-right content-search"><input ng-model="CaseNumber" placeholder="Search your hearing"></div>
    					</div>
    				</div>
    				
    				<div class="table-responsive">
    					<table class="table">
                            <colgroup>
                            	<col class="col-md-1">
                              	<col class="col-md-1">
                               	<col class="col-md-2">
                              	<col class="col-md-1">
                              	<col class="col-md-4">
                              	<col class="col-md-1">
                               	<col class="col-md-1">
                               	<col class="col-md-4"> 
                            </colgroup>
                            
                            <thead>
                                <tr>
                    				<th>Date</th>
                    				<th>Type</th>
                    				<th>Case Number</th>				
                    				<th>Note</th>
                    				<th>Address</th>
                    				<th>CD</th>
                    				<th>Hearing</th>
                    				<th>LOD</th>
                    			</tr>
                            </thead>
                            
                            <tr ng-repeat="hearing in hearings | filter:CaseNumber">
                    			<td ng-bind="hearing.Date"></td>
                    			<td ng-bind="hearing.Type"></td>
                    			<td ng-bind="hearing.CaseNumber"></td>
                    			<td ng-bind="hearing.Note"></td>
                    			<td ng-bind="hearing.Address"></td>
                    			<td ng-bind="hearing.CD"></td>
                    			<td><span ng-if="hearing.HearingLink"><a href="{[{hearing.HearingLink}]}" target="_blank"><i class="fa fa-file-pdf-o fa-2x" aria-hidden="true"></i></a></span></td>
                    			<td> 
                    				<div class="tooltip" ng-if="assignDate >= hearing.Date"><a href="#"><i class="fa fa-info-circle fa-2x" aria-hidden="true"></i></a>
                                      <span class="tooltiptext">
                                      	<a href="#">A</a> <a href="#">B</a> <a href="#">C</a>
                                      </span>
                                    </div>
                    			</td> 
                    		</tr>
                        </table>
    				</div>
    			</div> <!-- //END hearings -->
    		</div><!-- //END left bar -->
    	</div>
    </div>	<!-- //End container -->
    
    <!-- //End container -->
			
    <!-- footer section -->
    {{ attach_library ('cityplanning/about-page') }}
