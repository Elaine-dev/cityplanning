    {# page template #}
    
    <!-- Fixed navbar -->
    {% include directory ~ '/partials/header.html.twig' %}

	{# page-banner #}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
				<div id="page-title-bg" style="background-image: url('{{ file_url(node.field_image.entity.fileuri) }}')"></div>
            </div>
        </div>
    </div>{# End page-banner #}

    <!-- contain -->
    <div class="container" id="main-container">
        {# Main content #}
        <div class="row">
        	<div class="col-md-12">{{ page.title_bar }}</div>
        </div>
        <div class="row content-wrapper">
        
            {% if page.side_menu %}
            	{# Left-side bar #}
	            <div class="col-md-9">
	                <div class="row padding-left0">
	                    <div class="col-md-12">
							{# content goes here #}
							{{ page.content }}
							
							<h3>HPOZ Zones</h3>							
							<div class="panel-group" id="overlays">
                                <div class="panel panel-default collapse-list">
                                    <div class="panel-heading">
                                        <h6 class="panel-title">
                                            <a class="title" data-toggle="collapse" href="#collapse7">View Full List of HPOZs</a>
                                        </h6>
                                    </div>

                                    <div id="collapse7" class="panel-collapse collapse">
                                        <ul class="list-group">
                                            {% for item in overlays['Historic Preservation Overlay Zones (HPOZs)']  %}
                                            <li><a href="{{ item.url }}">{{ item.title}}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            
	                    </div>
	                </div>
	            </div>{# End Left-side bar #}
            
	            {# Right-side bar #}
	            <div class="col-md-3 sidebar-menu hidden-sm hidden-xs">
	                <div class="top-bar"></div>
	                  {{ page.side_menu }}
	            </div>{# End Right-side bar #}
            {% else %}
            	<div class="col-md-12">
	                <div class="row padding-left0">
	                    <div class="col-md-12 padding-left0 padding-right0">
							{# content goes here #}
							{{ page.content }}
							
							<h3>HPOZ Zones</h3>							
							<div class="panel-group" id="overlays">
                                <div class="panel panel-default collapse-list">
                                    <div class="panel-heading">
                                        <h6 class="panel-title">
                                            <a class="title" data-toggle="collapse" href="#collapse7">View Full List of HPOZs</a>
                                        </h6>
                                    </div>

                                    <div id="collapse7" class="panel-collapse collapse">
                                        <ul class="list-group">
                                            {% for item in overlays['Historic Preservation Overlay Zones (HPOZs)']  %}
                                            <li><a href="{{ item.url }}">{{ item.title}}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            
	                    </div>
	                </div>
	            </div>
            {% endif %} 
            
        </div>
    </div>{# End container #}
    
    <!-- footer section -->
    {% include directory ~ '/partials/footer.html.twig' %}