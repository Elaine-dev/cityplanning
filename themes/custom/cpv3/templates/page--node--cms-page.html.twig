    </div>
</div>{# End container #}

<div class="full-width-image">
	{% for item in full_width_data %}
		{% if item.flag %}
			{# full width content goes here #}
			<div class="container-fluid info-bg-color-2">
				<div class="row">
					<div class="col-md-12">
						<center>
			            {{ bamboo_render_entity('paragraph', item.para_id) }}
			            </center>
    				</div>
				</div>
			</div>
		{% else %}
			{# small width content goes here #}
			<div class="container">
				<div class="row">
					{{ bamboo_render_entity('paragraph', item.para_id) }}
				</div>
			</div>
		{% endif %}
	{% endfor %}
</div>

