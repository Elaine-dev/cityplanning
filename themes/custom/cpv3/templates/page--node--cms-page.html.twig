<!-- Fixed navbar -->
{% include directory ~ '/partials/header.html.twig' %}

{# page-banner #}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div id="page-title-bg"><img src="http://ladcp.westus.cloudapp.azure.com{{ file_url(node.field_image.entity.fileuri) }}" class="img-responsive " alt="bg"></div>
        </div>
    </div>
</div>{# End page-banner #}

<!-- contain -->
<div class="container" id="main-container">
    {# Main content #}
    <div class="row">
        {# Left-side bar #}
        <div class="col-md-9">
            <div class="row padding-left0">
                <div class="col-md-12">
                    <h1>{{ node.label }}</h1>
                    {{ node.field_intro_content.value }}
                    {% set full_width_data = [] %}
                    {% set small_width_data = [] %}
                    {% set break = true %}
                    {% for parag_id in node.field_content_section.value %}
                        {% set data = bamboo_render_entity('paragraph', parag_id['target_id']) %}
                        {% if data['#paragraph'].hasField('field_full_width_image') %}
                            {% set full_width_data = full_width_data|merge({(loop.index0):{'para_id':parag_id['target_id'],'flag':true}}) %}
                            {% set break = false %}
                        {% elseif break %}
                            <div class="section-content clear">
                                {{ bamboo_render_entity('paragraph', parag_id['target_id']) }}
                            </div>
                        {% else %}
                            {% set full_width_data = full_width_data|merge({(loop.index0):{'para_id':parag_id['target_id'],'flag':false}}) %}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>{# End Left-side bar #}

        {# Right-side bar #}
        <div class="col-md-3 sidebar-menu">
            <div class="top-bar"></div>
              {{ page.side_menu }}
