<!-- Fixed navbar -->
{% include directory ~ '/partials/header.html.twig' %}

{# page-banner #}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div id="page-title-bg"><img src="{{ theme_base_path }}/images/page-bg.jpg" class="img-responsive " alt="bg"></div>
    </div>
  </div>
</div>
{# End page-banner #}

<!-- contain -->
<div class="container" id="main-container-calendar">
  {# Main content #}
  <div class="row">
    <div class="col-md-12">
      <h1>{{ node.label }}</h1>
    </div>
  </div>
  <div class="row padding-bottom60" style="padding-top: 25px;">
    <div class="col-md-9">
      <div class="row padding-left0">
        <div class="col-md-12">
          <p>
            In addition to facilitating Commission hearings, the Department holds its own public hearings and workshops. These events are intended for community members to provide feedback and comments on a number of planning-related items ranging from local
            development projects to specific land use policies.
          </p>

          <div class="row cal-section">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-12">
                  <div id='loading'>loading...</div>
                </div>
              </div>
              <div class="row">
                <div id='calendar'></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <a href="{{ base_path }}about/hearings"><img src="{{ theme_base_path }}/images/p-hearing.jpg" class="img-responsive paddingtop35" alt="access public hearing information"/></a>
        </div>
      </div>
    </div>

    {# Right-side bar #}
    <div class="col-md-3 sidebar-menu hidden-sm hidden-xs">
      <div class="top-bar"></div>
      {{ page.side_menu }}
    </div>
    {# End Right-side bar #}
  </div>
</div>
{# End container #}

<!-- footer section -->
{{ attach_library ('cpv3/calendar-detail') }}
{% include directory ~ '/partials/footer.html.twig' %}
