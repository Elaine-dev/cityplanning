{% for item in items %}
	{% set bg = item.content['#field_collection_item'].get('field_bg_class').value %}
	{% set icon = item.content['#field_collection_item'].get('field_icon_class').value %}
	{% set link = item.content['#field_collection_item'].get('field_button_link_url').value[0]['uri'] %}
	{% set text = item.content['#field_collection_item'].get('field_text').value %}
	<div>
		<a href="{{ link }}">
		    <p class="{{ bg }}">
		        {{ text }}
		        <span style="float: right;">
		         <i class="{{ icon }}" aria-hidden="true"></i>
		        </span>
		    </p>
		</a>
	</div>
{% endfor %}