{% for item in items %}

	{% set title = item.content['#field_collection_item'].get('field_title').value   %}
	{% set body = item.content['#field_collection_item'].get('field_body').value   %}
	{% set item_id = item.content['#field_collection_item'].get('item_id').value   %}
	{% set bg = item.content['#field_collection_item'].get('field_panel_heading_bgcolor').value %}	
	
    {# set Panel Head: Background Color #}
    {% set panel_head_bgcolor = 'panelHeadingTitle-'~bg %}
    {% set title_color = bg == "Default" ? "panel-title-default" : "panel-title-white" %}
	
	<div class="panel-group" id="accordion">
		<div class="panel panel-default collapse-list">
			<div class="panel-heading {{ panel_head_bgcolor }}">
				<h6 class="panel-title">
				    <a class="title no-uppercase {{ title_color }}" data-toggle="collapse" href="#collapse{{item_id}}">{{ title }}</a>
				</h6>
			</div>
		        
			<div id="collapse{{item_id}}" class="panel-collapse collapse">
				<div class="list-group">
				    {{ body|raw }}
				</div>
			</div>
		</div>
	</div>
{% endfor %}