{% set url = content.field_community_info.0['#url_title'] %}
{% set url2 = content.field_community_info_2.0['#url_title'] %}

<div class="row">
    <div class="col-md-6">
    	<div class="row">
            {% if content.field_policy_planner_contact %}
            <div class="clearfix col-md-12 cpa-fields">
                <strong class="overlays-field-title">Staff Contact: Plan Policies</strong> <br>
                {{ content.field_policy_planner_contact }}
            </div>
            {% endif %}
            
             {% if content.field_project_planner_contact %}
             <div class="clearfix col-md-12 cpa-fields">
                <strong class="overlays-field-title">Staff Contact: Project Review</strong> <br>
                {{ content.field_project_planner_contact }}
             </div>
            {% endif %}
            
            {% if content.field_general_information and url2 != ""  %}
             <div class="clearfix col-md-12 cpa-fields">
                <strong class="overlays-field-title">General Information:</strong><br>
                {{ content.field_general_information }}
            </div>
            {% endif %}
        </div>
    </div>

    <div class="col-md-6">
    	<div class="row">        
            {% if url != "" %}
            <div class="clearfix col-md-12 cpa-fields">
                <a href="{{ url|render }}" target="_blank" rel="nofollow">
                    <div class="col-md-2 col-xs-2 padding-left0">
                    	<img src="{{ theme_base_path }}/images/i-planUpdating.png" alt="community plan area info" />
                	</div>
                    <div class="col-md-10 col-xs-10 community-icon-color">
                    	<strong>
                    		This plan is currently going<br>
                    		through a community update.
                		</strong><br>
                    	Click here for more info.
                	</div>
                </a>
            </div>
            {% endif %}
            
            {% if url2 != "" %}
                <div class="clearfix col-md-12 cpa-fields">
                    <a href="{{ url2|render }}" target="_blank" rel="nofollow">
                        <div class="col-md-2 col-xs-2 padding-left0">
                        	<img src="{{ theme_base_path }}/images/i-planUpdating.png" alt="Venice Local Coastal Program icon" />
                    	</div>
                        <div class="col-md-10 col-xs-10 community-icon-color">
                        	<strong>
                            	The Venice Local Coastal Program<br>
                            	is going through and update.
                        	</strong><br>
                        	Click here for more info.
                    	</div>
                    </a>
                </div>
            {% else %}
                {% if content.field_general_information %}
                 <div class="clearfix col-md-12 cpa-fields">
                    <strong class="overlays-field-title">General Information:</strong><br>
                    {{ content.field_general_information }}
                </div>
                {% endif %}        
            {% endif %}
    
        </div>
    </div>
</div>

<div class="row padding-top2em padding-bottom60" id="community-plan-area">
    <div class="col-md-12">
      {% for parag_id in node.field_content_section.value %}
        {% set data = bamboo_render_entity('paragraph', parag_id['target_id']) %}
        {% set class = data['#paragraph'].getType %}

         <div class = "section-content {{class}} clear">
             {{ bamboo_render_entity('paragraph', parag_id['target_id']) }}
         </div>
      {% endfor %}
    </div>
</div>
