<article{{ attributes }}>

    {% if display_submitted %}
        <footer>
            {{ author_picture }}
            <div{{ author_attributes }}>
                {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
                {{ metadata }}
            </div>
        </footer>
    {% endif %}
    
    {{ drupal_block('eir_block') }}
    
    <div{{ content_attributes }} id="draft">
    	<div class="row">
    		<div class="col-md-12">
    			<div class="bottom" style="padding-top: 15px; margin-bottom: 15px;"></div>
    		</div>
    	</div>
    	
    	<div class="row">
			<div class="col-md-6">
                <em>
                    {% if node_data.case_number %}
                        <strong>Case Number:</strong> {{ node_data.case_number }}<br>
                    {% endif %}
                    {% if node_data.house_number %}
                        <strong>State Clearinghouse Number:</strong> {{ node_data.house_number }}
                    {% endif %}
                </em>
            </div>
            
            <div class="col-md-6">
                <em>
                    {% if node_data.council_district %}
                        <strong>Council District</strong>: {{ node_data.council_district }} <br>
                    {% endif %}
                    {% if node_data.community_plan_areas %}
                        <strong>Community Plan Areas</strong>: {{ node_data.community_plan_areas }}
                    {% endif %}
                </em>
            </div>
            
            <div class="col-md-12">
              <em>
              {% if node_data.project_location %}
                 <strong>Project Location:</strong> {{ node_data.project_location }}
              {% endif %}
              </em>
            </div>
    	</div>


    	<div class="row">
        	<div class="col-md-12">
                <div class="bottom" style="padding-top:20px;"></div>
                {{ content.body }}
                
            </div>
        </div>
    </div>
</article>