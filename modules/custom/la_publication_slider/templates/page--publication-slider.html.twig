<div class="row padding-left0 padding-bottom25">
	<div class="col-md-12">
		<div id="sliderCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            {# count total number of item #}
            {% set count = data|length %}
            <ol class="carousel-indicators">
    		    {% for i in 1..count %}
              		<li data-target="#sliderCarousel" data-slide-to="* {{ i }}" {% if i == 1 %}class="active" {% endif %}></li>
                  {% endfor %}
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
             {# iterate the items #}
		    {% for key, record in data %}
              <div class="item {% if loop.index == 1 %} active {% endif %}">
                <div class="carousel-caption ">
                  <p class="slider-title">{{ record.title }}</p>
                  <p class="slider-caption">{{ record.detail }}</p>
                </div>
                <img src="{{ record.imagePath }}" alt="{{ record.title }}">
              </div>
              {% endfor %}
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#sliderCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#sliderCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

	</div>
</div>