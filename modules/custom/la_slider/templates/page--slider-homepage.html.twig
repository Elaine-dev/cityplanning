<div class="container-fluid" id="slider">
	<div class="row">
   		<div class="col-md-12 padding-left0 padding-right0">
             <div id="bootstrap-touch-slider" class="carousel bs-slider fade  control-round indicators-line" data-ride="carousel" data-pause="hover" data-interval="9000">
                <!-- Indicators -->
                {% set count = data|length %}
                <ol class="carousel-indicators">
               		{% for i in 1..count %}
                   		<li data-target="#bootstrap-touch-slider" data-slide-to="{{ i }}" {% if i == 1 %} class="active" {% endif %}></li>
                   {% endfor %}
                </ol>

                <!-- Wrapper For Slides -->
                <div class="carousel-inner" role="listbox">

                   {% for key, record in data %}
                   <!-- Slide -->
                   <div class="item {% if loop.index == 1 %} active {% endif %}" style="background:url('{{ record.imagePath }}') no-repeat center center; background-size: cover; height: 500px;" >
                      <!-- Slide Background -->
                      <div class="bs-slider-overlay"></div>
                      <!-- Slide Text Layer -->
                      <div class="slide-text slide_style_left">
                         <h2 data-animation="animated flipInX">{{ record.detail|striptags|slice(0, 160) }}</h2>
                          <span class="read-more" ><a href="{{ path('entity.node.canonical', {'node': record.nid}) }}">Read more +</a></span>
                      </div>
                   </div> <!-- //End of Slide -->
                   {% endfor %}

                </div><!-- //.carousel-inner -->

                <!-- Left Control -->
                <a class="left carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="prev">
	                <span class="fa fa-angle-left" aria-hidden="true"></span>
	                <span class="sr-only">Previous</span>
                </a>

                <!-- Right Control -->
                <a class="right carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="next">
	                <span class="fa fa-angle-right" aria-hidden="true"></span>
	                <span class="sr-only">Next</span>
                </a>
      		</div><!-- // End  bootstrap-touch-slider Slider -->
		</div>
	</div>

  	<!-- color boxes -->
	<div class="row">
		<div class="col-md-8 Dark-Orange" id="map-promote-preserve-wrapper">
       		<div class="color-box-txt planning-tag">Map. Plan. Preserve. Shape. <span>#planning4LA</span></div>
   		</div>

		<div class="col-md-3 Saffron-Mango" id="our-mission-wrapper">
       		<div class="our-mission color-box-txt"><a href="{{ base_url }}about/department">Mission</a></div>
   		</div>

		<div class="col-md-1 Dark-Orange" id="blank-wrapper">
       		<div class="color-box-txt">&nbsp;</div>
   		</div>
	</div> <!-- // End color boxes -->
</div>
